{
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["esnext"],
      "target": "ES5",
      "moduleResolution": "Node",
      "outDir": "dist",
      "baseUrl": "src/",
      "sourceMap": false,
      "strict": true,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false
    },
    "exclude": [
        "node_modules"
    ]
  }